@model IEnumerable<ApreensaoVeiculo.Dominio.Apreensao>


@{
    ViewBag.Title = "Veículos Apreendidos";
}

<h2>Veículos Apreendidos</h2>

<p>
    @Html.ActionLink("Nova Apreensão", "Cadastrar", "Apreensao", new { @class = "btn btn-success" })
</p>



@*<p>
    @Html.ActionLink("Cadastrar", "Cadastrar")
</p>*@


<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.Placa)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Modelo)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.DataApreensao)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>

        <th></th>

    </tr>

@foreach (var item in Model)
{

    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Placa)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Modelo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DataApreensao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>

        <td>
            @Html.ActionLink("Editar", "Editar", new { id = item.Codigo }) |
            @Html.ActionLink("Detalhes", "Detalhes", new { id = item.Codigo }) |
            @Html.ActionLink("Excluir", "Excluir", new { id = item.Codigo })
        </td>
    </tr>

}



</table>
