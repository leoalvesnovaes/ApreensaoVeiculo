@model IEnumerable<ApreensaoVeiculo.Dominio.TabelaPreco>


@{
    ViewBag.Title = "Tabela de Preço";
}

<h2>Tabela de Preço</h2>


<p>
    @Html.ActionLink("Cadastrar", "Cadastrar")
</p>

<table class="table">
<tr>
    <th>
        @Html.DisplayNameFor(model => model.Descricao)
    </th>
    <th>
        @Html.DisplayNameFor(model => model.ValorDiaria)
    </th>
    <th>
        @Html.DisplayNameFor(model => model.ValorGuincho)
    </th>
    <th>
        @Html.DisplayNameFor(model => model.DataCadastro)
    </th>
    <th>
        @Html.DisplayNameFor(model => model.DataAlteracaoCadastro)
    </th>
    <th></th>
</tr>

@foreach (var item in Model) {

    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Descricao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ValorDiaria)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ValorGuincho)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DataCadastro)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DataAlteracaoCadastro)
        </td>
        <td>
            @Html.ActionLink("Editar", "Editar", new { id=item.Codigo }) |
            @*@Html.ActionLink("Detalhes", "Detalhes", new { id = item.Codigo }) |*@
            @Html.ActionLink("Excluir", "Excluir", new { id = item.Codigo })
        </td>
    </tr>
}

</table>